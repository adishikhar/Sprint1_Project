

        <!DOCTYPE web-app PUBLIC
                "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                "http://java.sun.com/dtd/web-app_2_3.dtd" >



<web-app>
  <display-name>Catalog Web Application</display-name>

  <servlet>
    <servlet-name>ProductServlet</servlet-name>
    <servlet-class>org.example.AddProductServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ProductServlet</servlet-name>
    <url-pattern>/add-product</url-pattern>
  </servlet-mapping>



  <servlet>
    <servlet-name>PromoServlet</servlet-name>
    <servlet-class>org.example.AddPromoServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PromoServlet</servlet-name>
    <url-pattern>/add-promo</url-pattern>
  </servlet-mapping>

</web-app>